<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Label?>

<AnchorPane prefWidth="1920" prefHeight="1080"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.RoomOneBoardController">

    <!-- Background -->
    <ImageView fitWidth="1920" fitHeight="1080" preserveRatio="false">
        <image>
            <Image url="@../../images/RoomOneBoard.png"/>
        </image>
    </ImageView>

     <!-- Arrow Left Icon -->
    <ImageView fx:id="arrowleft"
                   layoutX="25" layoutY="500"
                   pickOnBounds="true"
                   fitWidth="80" fitHeight="80"
                   onMouseClicked="#goToNext">
        <image>
            <Image url="@../../images/ArrowLeft.png"/>
        </image>
    </ImageView>

     <!-- Hint Icon -->
    <ImageView fx:id="hint"
                   layoutX="1800" layoutY="125"
                   pickOnBounds="true"
                   fitWidth="100" fitHeight="100"
                   onMouseClicked="#showHint">
        <image>
            <Image url="@../../images/HintIcon.png"/>
        </image>
    </ImageView>

   

    <!-- HINT (hidden until clicked) -->
    <AnchorPane fx:id="hintPane"
                layoutX="700" layoutY="600"
                prefWidth="700" prefHeight="300"
                visible="false">
            <ImageView fx:id="hintNote"
                        layoutX="-200" layoutY="-300"
                        fitWidth="1000"
                        fitHeight="900"
                        preserveRatio="true">
                <image>
                    <Image url="@../../images/hintNote.png"/>
                </image>
            </ImageView>
        
        <Label fx:id="hintText"
            id="hintText"
            layoutX="15" layoutY="-100"
            prefWidth="650"
            wrapText="true"
            style="
           -fx-font-family: 'Bradley Hand';
            -fx-text-fill: black;
            -fx-font-size: 36px;
            "
            text=""/>

        <ImageView fx:id="closeHintArrow"
           layoutX="-30" layoutY="180"
           fitWidth="30" fitHeight="30"
           preserveRatio="true"
           pickOnBounds="true"
           visible="false"
           onMouseClicked="#hideHint">
            <image>
                <Image url="@../../images/ArrowLeft.png"/>
            </image>
        </ImageView>
    </AnchorPane>

    

</AnchorPane>