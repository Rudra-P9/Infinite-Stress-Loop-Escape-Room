<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.ProgressBar?>

<AnchorPane prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.Room3Puzzle5Controller">

  <children>

    <!-- background -->
    <ImageView fx:id="bgImageB" fitHeight="1080.0" fitWidth="1920.0" preserveRatio="false">
      <image>
        <Image url="@../../images/Puzzle5Screen.jpg" />
      </image>
    </ImageView>

    <!-- Timer (Top Left) -->
    <Rectangle arcHeight="5.0" arcWidth="5.0" height="74.0" layoutX="23.0" layoutY="38.0" stroke="#d0c6c6" strokeType="INSIDE" strokeWidth="4.0" width="145.0" />
    <Label fx:id="timerLabel" layoutX="50.0" layoutY="50.0" text="00:00" textFill="RED">
        <font>
            <Font name="Impact" size="40.0" />
        </font>
    </Label>

    <!-- Progress Bar (Top Center) -->
    <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#333333" height="74.0" layoutX="820.0" layoutY="38.0" stroke="#d0c6c6" strokeType="INSIDE" strokeWidth="4.0" width="280.0" />
    <Label layoutX="865.0" layoutY="48.0" text="Progress:" textFill="#ffffff">
        <font>
            <Font name="Impact" size="20.0" />
        </font>
    </Label>
    <ProgressBar fx:id="progressBar" layoutX="850.0" layoutY="72.0" prefHeight="25.0" prefWidth="220.0" progress="0.0" style="-fx-accent: #4CAF50;" />
    <Label fx:id="progressLabel" layoutX="985.0" layoutY="48.0" text="0%" textFill="#4CAF50">
        <font>
            <Font name="Impact" size="20.0" />
        </font>
    </Label>

    <!-- circular glowy play button -->
    <Button fx:id="playButtonB" layoutX="948.0" layoutY="501.0" onMouseClicked="#onPlayB" prefHeight="88.0" prefWidth="88.0" style="                 -fx-background-radius: 200;                 -fx-background-color: linear-gradient(#2a70a4, #0e2233);                 -fx-border-color: rgba(180, 220, 255, 0.85);                 -fx-border-width: 4;                 -fx-border-radius: 200;                 -fx-padding: 0;                 -fx-cursor: hand;             ">
        <effect>
            <Glow level="0.85" />
        </effect>
    </Button>

    <!-- hint area -->
    <AnchorPane fx:id="hintPaneB" layoutX="1430.0" layoutY="160.0" prefHeight="480.0" prefWidth="360.0" visible="false">
        <children>
            <ImageView fitHeight="480.0" fitWidth="360.0" preserveRatio="true">
                <image>
                    <Image url="@../images/HintNoteFinal.png" />
                </image>
            </ImageView>

            <Label fx:id="hintTextLabelB" layoutX="18.0" layoutY="28.0" prefHeight="420.0" prefWidth="324.0" style="-fx-text-fill: black; -fx-font-family: 'Georgia'; -fx-font-size: 16px;" wrapText="true" />
        </children>
    </AnchorPane>

    <Button fx:id="hintButtonB" layoutX="1800.0" layoutY="40.0" text="HINT" />
    <Button fx:id="backButtonB" layoutX="40.0" layoutY="980.0" text="Back" />

    <!-- reward letter -->
    <Label fx:id="rewardLetterB" alignment="CENTER" layoutX="893.0" layoutY="700.0" prefHeight="220.0" prefWidth="200.0" style="-fx-font-size: 200px; -fx-text-fill: #c62828; -fx-font-weight: bold;                   -fx-effect: dropshadow(one-pass-box, rgba(0,0,0,0.6), 8, 0, 4, 4);                   -fx-alignment: center;" text="L" visible="false">
        <font><Font name="Felix Titling" size="200.0" /></font>
    </Label>

    <!-- answer field -->
    <TextField fx:id="answerFieldB" alignment="CENTER" layoutX="823.0" layoutY="950.0" onAction="#onCheckB" prefHeight="65.0" prefWidth="360.0" promptText="Type Answer Here" style="                     -fx-font-size: 28px;                     -fx-font-family: 'Copperplate Gothic Bold';                     -fx-background-radius: 12;                     -fx-background-color: #004e87;                     -fx-prompt-text-fill: rgba(200,200,200,0.75);                     -fx-text-fill: white;                " />

    <!-- feedback placed EXACTLY beside the TextField -->
    <Label fx:id="feedbackLabelB" layoutX="1195.0" layoutY="965.0" prefWidth="260.0" style="-fx-text-fill: yellow; -fx-font-size:20px; -fx-font-weight:bold; -fx-alignment:center-left;" />

  </children>
</AnchorPane>
