<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Label?>

<AnchorPane prefWidth="1920" prefHeight="1080"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.RoomOneIntroController">

    <children>

        <!-- BACKGROUND  -->
        <ImageView fitWidth="1920" fitHeight="1080" preserveRatio="false">
            <image>
                <Image url="@../../images/RoomOneIntroBack.png" />
            </image>
        </ImageView>

        <!-- INTRO TEXT -->
        <Label layoutX="40" layoutY="830"
            prefWidth="700"
            wrapText="true"
            style="-fx-text-fill: WHITE; -fx-font-size: 36px; -fx-font-weight: bold;">
            <text>
                ENTERING CALIBRATION HALL...
                SYSTEM DIAGNOSTICS: INCOMPLETE
                SECURITY PROTOCOL ENGAGED
                MANUAL INPUT REQUIRED TO RESTORE CONTROL.
            </text>
        </Label>


        <!-- MAGNIFIER -->
        <ImageView fx:id="magnifier"
                   layoutX="1025" layoutY="550"
                   pickOnBounds="true"
                   fitWidth="70" fitHeight="70"
                   onMouseClicked="#goToNext">
            <image>
                <Image url="@../../images/RoomOneZoomIn.png"/>
            </image>
        </ImageView>

    </children>
</AnchorPane>
