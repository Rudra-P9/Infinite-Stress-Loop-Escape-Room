<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="1080.0" prefWidth="1920.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.OpenDoorController"
            fx:id="rootPane">

    <children>

        <ImageView fx:id="bgImage"
                   pickOnBounds="true"
                   preserveRatio="false"
                   AnchorPane.topAnchor="0.0"
                   AnchorPane.bottomAnchor="0.0"
                   AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="0.0">
            <image>
                <Image url="@../../images/OpenDoor.png"/>
            </image>
        </ImageView>

        <Label fx:id="escapedLabel"
               alignment="CENTER"
               layoutX="0.0" layoutY="80.0"
               prefWidth="1920.0"
               text="YOU ESCAPED!"
               style="
                    -fx-font-family: 'Storm Gust';
                    -fx-font-size: 72px;
                    -fx-text-fill: #ff4b4b;
                    -fx-font-weight: bold;
                    -fx-effect: dropshadow(gaussian, black, 20, 0.7, 0, 0);
               "/>

        <Button fx:id="mainMenuButton"
                layoutX="1300.0" layoutY="520.0"
                prefWidth="220.0" prefHeight="70.0"
                text="Main Menu"
                onMouseClicked="#goToMainMenu"
                style="
                    -fx-background-color: rgba(0,0,0,0.6);
                    -fx-text-fill: white;
                    -fx-font-family: 'Storm Gust';
                    -fx-font-size: 22px;
                    -fx-font-weight: bold;
                    -fx-border-color: #00e1ff;
                    -fx-border-width: 3;
                    -fx-border-radius: 10;
                    -fx-background-radius: 10;
                    -fx-effect: dropshadow(gaussian, #00e1ff, 20, 0.5, 0, 0);
                    -fx-cursor: hand;
                "/>

        <Button fx:id="leaderboardButton"
                layoutX="300.0" layoutY="520.0"
                prefWidth="220.0" prefHeight="70.0"
                text="Leaderboard"
                onMouseClicked="#goToLeaderboard"
                style="
                    -fx-background-color: rgba(0,0,0,0.6);
                    -fx-text-fill: white;
                    -fx-font-family: 'Storm Gust';
                    -fx-font-size: 22px;
                    -fx-font-weight: bold;
                    -fx-border-color: #00e1ff;
                    -fx-border-width: 3;
                    -fx-border-radius: 10;
                    -fx-background-radius: 10;
                    -fx-effect: dropshadow(gaussian, #00e1ff, 20, 0.5, 0, 0);
                    -fx-cursor: hand;
                "/>

    </children>
</AnchorPane>